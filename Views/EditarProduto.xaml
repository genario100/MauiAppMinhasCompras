<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="{Binding Descricao}"
             Background="{StaticResource PrimaryDark}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout
                        Padding="10"
                        Spacing="10"
                        VerticalOptions="Start">

        <Image
              Source="frente.png"
              HeightRequest="185"
              Aspect="AspectFit"
              SemanticProperties.Description="dot net bot in a race car number eight" />

        <Label Text="Descrição"
                TextColor="White"
                Padding="10"/>
        <Entry x:Name="txt_descricao" Text = "{Binding Descricao}" 
                TextColor="White"/>

        <Label Text="Quantidade" Padding="10"
                TextColor="White"/>
        <Entry x:Name="txt_Quantidade" Text = "{Binding Quantidade}" Keyboard="Numeric" 
                 TextColor="White"/>

        <Label Text="Preço Unitario"
              TextColor="White"  
               Padding="10"/>
        <Entry x:Name="txt_preco_unitario" Text="{Binding Preco}" Keyboard="Numeric" 
               TextColor="White"/>

    </VerticalStackLayout>


</ContentPage>