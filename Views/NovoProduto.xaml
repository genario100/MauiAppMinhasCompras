<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="NovoProduto">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked_1" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout
        Padding="10"
        Spacing="10"
        VerticalOptions="Start">

            <Label Text="Descrição" />
            <Entry x:Name="txt_descricao" />

            <Label Text="Quantidade" />
            <Entry x:Name="txt_Quantidade" />

            <Label Text="Preço Unitario" />
            <Entry x:Name="txt_preco_unitario" />

    </VerticalStackLayout>
</ContentPage>