<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="NovoProduto"
             Background="{StaticResource PrimaryDark}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked_1" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout
        Padding="10"
        Spacing="10"
        VerticalOptions="Start">

        <Image
              Source="frente.png"
              HeightRequest="185"
              Aspect="AspectFit"
              SemanticProperties.Description="dot net bot in a race car number eight" />

        <Label Text="Descrição" 
               Padding="10"
                TextColor="White"/>
            <Entry x:Name="txt_descricao"
                   TextColor="White"/>

            <Label Text="Quantidade" 
                   Padding="10"
                    TextColor="White"/>
            <Entry x:Name="txt_Quantidade" Keyboard="Numeric" 
                    TextColor="White"/>

            <Label Text="Preço Unitario" 
                   Padding="10"
                    TextColor="White"/>
            <Entry x:Name="txt_preco_unitario" Keyboard="Numeric"
                    TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>