<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="login.Login"
             Title="Login"
             Background="{StaticResource PrimaryDark}">
    
    <VerticalStackLayout 
        VerticalOptions="Center"
        Spacing="10"
        Padding="30">
        
        <Image
        Source="frente.png"
        HeightRequest="100"
        Aspect="AspectFit"
        SemanticProperties.Description="dot net bot in a hovercraft number nine" />
        
        <Label Text="LOGIN" 
               HorizontalOptions="Center"
               FontSize="32"
                TextColor="White"/>

        <Label Text="Usuario" FontSize="24"
                TextColor="White"
               Padding="10"/>
        <Entry x:Name="txt_Usuarioo" FontSize="24"
               TextColor="White"/>

        <Label Text="Senha" FontSize="24"
                TextColor="White"
               Padding="10"/>
        <Entry x:Name="txt_Senhaa" FontSize="24" IsPassword="True" 
                TextColor="White"/>

        <Button Text="Entrar" 
                FontSize="24" 
                BackgroundColor="{StaticResource Primary}" 
                HorizontalOptions="Center"
                Clicked="Button_Clicked_2"/>
        
        
        
    </VerticalStackLayout>
</ContentPage>